# Server Configuration
NODE_ENV=development
PORT=3000
API_PREFIX=/api/v1
CLIENT_URL=http://localhost:3001

# Database Configuration
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/tcms_dev

# Authentication
JWT_SECRET=your-jwt-secret-key-here
JWT_EXPIRES_IN=1d

# GitHub Integration
GITHUB_API_URL=https://api.github.com
GITHUB_TOKEN=your-github-personal-access-token

# Snyk Integration
SNYK_TOKEN=your-snyk-api-token
SNYK_API_URL=https://snyk.io/api/v1

# SonarQube Integration
SONARQUBE_URL=http://localhost:9000
SONARQUBE_TOKEN=your-sonarqube-token

# Slack/Teams Notifications
SLACK_WEBHOOK_URL=your-slack-webhook-url
TEAMS_WEBHOOK_URL=your-teams-webhook-url

# Logging
LOG_LEVEL=info

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100

# Security
CORS_ORIGINS=http://localhost:3001

# Caching
REDIS_URL=redis://localhost:6379

# Scanning Configuration
SCAN_CRON_SCHEDULE="0 0 * * *" # Daily at midnight
SCAN_TIMEOUT_MS=300000 # 5 minutes

# Extension Analysis
EXTENSION_SCAN_ENABLED=true
EXTENSION_COMPATIBILITY_CHECK_URL=https://example.com/api/extension-check

# Metrics Collection
METRICS_ENABLED=true
METRICS_PORT=9090
